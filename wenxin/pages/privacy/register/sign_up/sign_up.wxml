<!--pages/privacy/register/sign_up/sign_up.wxml-->

<view class="all_container">
  <view class="input_container">
    <view class="label_container">
      <text class="label">用户名</text>
    </view>
    <input class="input_field" 
      id="user_name"
      placeholder="请输入用户名"
      bindinput="user_name_input"
      value="{{user_name}}"
      type="text"
      confirm-type="next"/>
  </view>

  <view class="input_container">
    <view class="label_container">
      <text class="label">密码</text>
    </view>
    <input class="input_field" 
      id="user_password"
      placeholder="请输入密码"
      bindinput="user_password_input"
      value="{{user_password}}"
      type="password"/>
  </view>

  <view class="input_container">
    <view class="label_container">
      <text class="label">再次输入密码</text>
    </view>
    <input class="input_field" 
      id="user_password_repead"
      placeholder="请再次输入密码"
      bindinput="user_password_input_repead"
      value="{{user_password_repead}}"
      type="password"/>
  </view>
</view>
<view class="button_container">
  <button id="register_button" bind:tap="register">注册</button>
</view>

