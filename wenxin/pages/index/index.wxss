/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  display: flex; 
  justify-content: center; 
  align-items: center; 
}
.container {
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  position: fixed; /* 固定定位 */
  top: 0; /* 靠近顶部 */
  width: 400px; /* 设置容器宽度 */
  height: 50px; /* 设置容器高度 */
  margin: 10px; /* 设置与屏幕边缘的间距（可选） */
  padding: 10px; /* 添加内边距（可选） */
  box-sizing: border-box; /* 包括边框和内边距在内的总宽度和高度 */
}
.avatar-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80px;      /* 设置按钮的宽度 */
  height: 80px;     /* 设置按钮的高度 */
  border-radius: 50%; /* 将按钮设置为圆形 */
  padding: 0;       /* 去除按钮内边距 */
  border: none;     /* 去除按钮边框 */
  background-color: transparent; /* 背景颜色透明，避免干扰头像显示 */
  margin-left: 10%;
}

.avatar {
  width: 70px;      /* 设置头像的宽度 */
  height: 70px;     /* 设置头像的高度 */
  border-radius: 50%; /* 将头像设置为圆形 */
  object-fit: cover; /* 确保头像保持比例且不会变形 */
}

.text {
  margin-top: 0%;
  margin-left: 10px; /* 按钮与文本之间的间距 */
}




